<h1>Kebab Shops</h1>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6">
      <% @kebab_shops.each do |kebab| %>
      <div class="kebapp-card">
        <div class="kebapp-card-top" style="background-image: url('https://withberlinlove.com/wp-content/uploads/2018/07/Gem%C3%BCse-D%C3%B6ner-im-Brot-at-R%C3%BCyam-Gem%C3%BCse-Kebab-Berlin.jpg')";>
        <div class="kebapp-store-name">
          <h2><strong><%= link_to kebab.name, kebab_shop_path(kebab) %></strong></h2>
        </div> <!--end of kebapp-store-name -->
        </div> <!--end of kebapp-card-top-->
        <div class="kebapp-card-text">
          <p class="kebapp-card-hours"><%= link_to kebab.name, kebab_shop_path(kebab)%></p>
          <p class="kebapp-card-rating">Rating:
            <i class="far fa-laugh-squint"></i>
          </p>
          <p class="kebapp-card-price">Price: 45.DDK</p>
          <p class="kebapp-card-distance">500m away</p>
        </div> <!--end of kebab-card-text -->
      </div> <!--end of kebapp-card -->
      <% end%>
    </div> <!-- end of col -->
  </div> <!-- end of row -->
</div> <!-- end of container -->

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6">
      <div id="map" style="width: 100%; height: 600px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>

