<%= render 'shared/navbar' %>
<br>
<div class="container">
  <div class="row">
    <div class="col-12">
            <div id="map" style="width: 350px; height: 370px;"
                  data-markers="<%= @markers.to_json %>"
                  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
      <h3 class="kebab-font mt-3 text-center"><%= @kebab_shop.name %></h3>
      <h4 class="text-center">Closes at: <%= @week_day.closing_hour %>:00 </h4>
      <div class="text-center">
      <%= cl_image_tag @kebab_shop.photo, height: 150, width: 250, crop: :fill %>
      <br>
      </div>
      <br>
      <p class="text-center"><strong> <%= @kebab_shop.address  %> </strong></p>


      <ul>
        <% @kebab_shop.reviews.each do |review| %>
        <ul> user : <%= review.user %> rating : <%= review.rating %>   </ul>
        <% end %>
      </ul>
      <h3 class="text-center"> Average Rating : <%=  @average_rating %> </h3>
      <br>
      <%= render "shared/review-form" %>
    </div>
  </div>
</div>
<%=  render 'shared/footer' %>

